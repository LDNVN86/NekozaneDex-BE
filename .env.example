# App
APP_ENV=development

# Security
FRAME_ANCESTORS='self'

# Server
PORT=9091
GIN_MODE=debug

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=nekozanedex

# JWT
JWT_ACCESS_SECRET=your-access-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_ACCESS_EXPIRE_MINUTES=30
# For testing with shorter expiration, use JWT_ACCESS_EXPIRE_SECONDS instead:
# JWT_ACCESS_EXPIRE_SECONDS=6
JWT_REFRESH_EXPIRE_DAYS=7

# Cookie
JWT_COOKIE_DOMAIN=localhost
JWT_COOKIE_SAME_SITE=lax
JWT_COOKIE_MAX_AGE=604800

# CORS (comma-separated origins) example in dev not real production
CORS_DEV_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
CORS_PROD_ORIGINS=https://nekozanedex.com,https://www.nekozanedex.com
CORS_STAGING_ORIGINS=https://staging.nekozanedex.com

# CSRF
CSRF_SECRET_KEY=your-csrf-secret-change-in-production

# Centrifugo (Realtime)
CENTRIFUGO_URL=http://localhost:8000
CENTRIFUGO_API_KEY=your-centrifugo-api-key

# Cloudinary (Image Storage)
# Get these from: https://console.cloudinary.com/settings/api-keys
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

